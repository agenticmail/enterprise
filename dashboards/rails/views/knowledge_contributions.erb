<div class="page-header">
  <h1>Knowledge Hub</h1>
  <p>Share knowledge and learn from the community</p>
</div>

<div class="tabs">
  <div class="tab active">Community</div>
  <div class="tab">My Contributions</div>
  <div class="tab">Bookmarks</div>
</div>

<div class="card">
  <h3>Featured Knowledge</h3>
  <% if @featured_knowledge.empty? %>
    <div class="empty"><span class="icon">ğŸŒŸ</span>No featured knowledge available<br><small>Community-shared knowledge will appear here</small></div>
  <% else %>
    <div class="knowledge-grid">
      <% @featured_knowledge.each do |knowledge| %>
        <div class="knowledge-card">
          <h4><%= knowledge['title'] %></h4>
          <p><%= knowledge['description'] %></p>
          <div class="knowledge-meta">
            <span>By <%= knowledge['author'] %></span>
            <span>ğŸ‘ <%= knowledge['likes'] %></span>
          </div>
          <button class="btn btn-primary btn-sm">View</button>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-top: 20px;">
  <div class="card">
    <h3>Latest Contributions</h3>
    <% if @latest_contributions.empty? %>
      <div class="empty"><span class="icon">ğŸ“</span>No contributions yet<br><small>Recent knowledge contributions will appear here</small></div>
    <% else %>
      <% @latest_contributions.each do |contribution| %>
        <div style="padding: 12px 0; border-bottom: 1px solid var(--border);">
          <strong><%= contribution['title'] %></strong>
          <div style="color:var(--text-muted); font-size: 12px; margin-top: 4px;">
            By <%= contribution['author'] %> â€¢ <%= contribution['created_at'] %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <div class="card">
    <h3>Trending Topics</h3>
    <% if @trending_topics.empty? %>
      <div class="empty"><span class="icon">ğŸ”¥</span>No trending topics<br><small>Popular knowledge topics will appear here</small></div>
    <% else %>
      <% @trending_topics.each do |topic| %>
        <div style="padding: 8px 0; border-bottom: 1px solid var(--border);">
          <span><%= topic['name'] %></span>
          <span class="badge" style="float: right;"><%= topic['count'] %></span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<style>
.knowledge-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 16px; margin-top: 16px; }
.knowledge-card { background: var(--bg-card); border: 1px solid var(--border); border-radius: var(--radius); padding: 16px; }
.knowledge-card h4 { margin-bottom: 8px; }
.knowledge-meta { font-size: 12px; color: var(--text-muted); margin: 12px 0; }
</style>