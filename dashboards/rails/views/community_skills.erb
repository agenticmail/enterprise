<div class="page-header">
  <h1>Community Skills</h1>
  <p>Browse and install skills shared by the community</p>
</div>

<div class="card">
  <h3>Featured Skills</h3>
  <% if @featured_skills.empty? %>
    <div class="empty"><span class="icon">ğŸª</span>No community skills available<br><small>Community-shared skills will appear here</small></div>
  <% else %>
    <div class="skills-grid">
      <% @featured_skills.each do |skill| %>
        <div class="skill-card">
          <h4><%= skill['name'] %></h4>
          <p><%= skill['description'] %></p>
          <div class="skill-meta">
            <span>By <%= skill['author'] %></span>
            <span>â˜… <%= skill['rating'] %></span>
          </div>
          <button class="btn btn-primary btn-sm">Install</button>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 20px;">
  <div class="card">
    <h3>Popular Categories</h3>
    <% if @categories.empty? %>
      <div class="empty"><span class="icon">ğŸ·ï¸</span>No categories</div>
    <% else %>
      <div class="category-list">
        <% @categories.each do |category| %>
          <div class="category-item">
            <span><%= category['name'] %></span>
            <span class="badge"><%= category['count'] %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <div class="card">
    <h3>My Contributions</h3>
    <% if @my_contributions.empty? %>
      <div class="empty"><span class="icon">ğŸ“¤</span>No contributions</div>
    <% else %>
      <div class="contributions-list">
        <% @my_contributions.each do |contribution| %>
          <div class="contribution-item">
            <strong><%= contribution['name'] %></strong>
            <small style="color:var(--text-muted)"><%= contribution['status'] %></small>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
.skills-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 16px; margin-top: 16px; }
.skill-card { background: var(--bg-card); border: 1px solid var(--border); border-radius: var(--radius); padding: 16px; }
.skill-card h4 { margin-bottom: 8px; }
.skill-meta { font-size: 12px; color: var(--text-muted); margin: 12px 0; }
.category-list, .contributions-list { margin-top: 12px; }
.category-item, .contribution-item { display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid var(--border); }
.category-item:last-child, .contribution-item:last-child { border-bottom: none; }
</style>