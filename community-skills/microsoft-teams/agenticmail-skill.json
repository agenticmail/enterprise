{
  "id": "microsoft-teams",
  "name": "Microsoft Teams",
  "description": "Send messages, manage channels, and schedule meetings in Microsoft Teams.",
  "version": "1.1.0",
  "author": "agenticmail",
  "repository": "https://github.com/agenticmail/enterprise/tree/main/community-skills/microsoft-teams",
  "license": "MIT",
  "category": "communication",
  "risk": "medium",
  "auth": {
    "type": "oauth2",
    "provider": "microsoft",
    "scopes": ["Team.ReadBasic.All", "Channel.ReadBasic.All", "ChatMessage.Send", "Chat.ReadWrite"]
  },
  "tags": ["teams", "microsoft", "messaging", "meetings"],
  "tools": [
    {
      "id": "teams_send_message",
      "name": "Send Message",
      "description": "Send a message to a Teams channel or chat"
    },
    {
      "id": "teams_create_channel",
      "name": "Create Channel",
      "description": "Create a new channel in a team"
    },
    {
      "id": "teams_schedule_meeting",
      "name": "Schedule Meeting",
      "description": "Schedule a Teams meeting with attendees"
    },
    {
      "id": "teams_list_channels",
      "name": "List Channels",
      "description": "List channels in a team"
    }
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "defaultTeam": {
        "type": "string",
        "description": "Default team name or ID"
      },
      "defaultChannel": {
        "type": "string",
        "default": "General",
        "description": "Default channel to send messages to"
      },
      "notifyOnMention": {
        "type": "boolean",
        "default": true,
        "description": "Send a notification when mentioned in a message"
      },
      "messageFormat": {
        "type": "string",
        "enum": ["text", "adaptive-card"],
        "default": "text",
        "description": "Format for Teams messages"
      }
    },
    "required": []
  },
  "minEngineVersion": "0.3.0"
}
